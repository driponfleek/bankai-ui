{
	"name": "@epr0t0type/bankai-ui",
	"private": true,
	"devDependencies": {
		"@babel/cli": "7.12.17",
		"@babel/core": "7.12.17",
		"@epr0t0type/eslint-config": "^0.0.0",
		"@epr0t0type/prettier-config": "^0.0.0",
		"@epr0t0type/stylelint-config": "^0.0.0",
		"@rollup/plugin-babel": "5.3.0",
		"@rollup/plugin-commonjs": "21.0.1",
		"@rollup/plugin-node-resolve": "13.0.6",
		"@testing-library/jest-dom": "5.15.1",
		"autoprefixer": "10.2.4",
		"babel-jest": "27.4.2",
		"cross-env": "7.0.3",
		"husky": "4.3.8",
		"jest": "26.6.3",
		"jest-environment-jsdom-global": "2.0.4",
		"lerna": "3.22.1",
		"lint-staged": "10.5.3",
		"postcss": "8.2.6",
		"postcss-import": "14.0.0",
		"postcss-reporter": "7.0.2",
		"postcss-url": "10.1.1",
		"rollup": "2.59.0",
		"rollup-plugin-peer-deps-external": "2.2.4",
		"rollup-plugin-postcss": "4.0.1",
		"rollup-plugin-terser": "7.0.2",
		"rollup-plugin-visualizer": "4.2.0",
		"rxjs-compat": "6.6.7"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"packages/**/*.js": [
			"prettier --write",
			"eslint --fix --ignore-pattern '**/public/**' --ignore-pattern '**/build/**' --ignore-pattern '**/dist/**'",
			"yarn test:related packages/"
		],
		"packages/**/*.scss": [
			"stylelint --fix --ignore-pattern '**/public/**' --ignore-pattern '**/build/**'"
		]
	},
	"scripts": {
		"bootstrap": "yarn run lerna bootstrap",
		"build": "yarn run lerna run build --concurrency 3",
		"build:clean": "yarn run lerna run pre:build --parallel",
		"fresh-start": "lerna clean && rm -rf node_modules && lerna bootstrap",
		"gitversion": "git --version",
		"gitstatus": "git status",
		"lerna-version": "cross-env HUSKY_SKIP_HOOKS=1 yarn run lerna version --conventional-commits --yes",
		"lint:js": "eslint packages --fix --ignore-pattern '**/node_modules/**' --ignore-pattern '**/public/**' --ignore-pattern '**/build/**' --ignore-pattern '**/dist/**'",
		"lint:scss": "stylelint \"**/*.scss\" --fix",
		"publish-snapshot": "yarn run lerna publish --registry https://npm.pkg.github.com/epr0t0type --no-push  --canary  --yes --force-publish",
		"publish-release": "cross-env HUSKY_SKIP_HOOKS=1 yarn run lerna publish --registry https://npm.pkg.github.com/epr0t0type --conventional-commits --yes",
		"test": "cross-env NODE_ENV=test jest",
		"test:related": "cross-env NODE_ENV=test jest --findRelatedTests",
		"whereami": "ls -ltrah"
	},
	"workspaces": [
		"packages/**"
	]
}
